# Environment Variables Template
# Copy this file to .env and fill in your values

# Application configuration
PROGRAM_NAME="FC Online Automation"
SECRET_KEY="secret_key_here"
DEBUG=False

# Github API configuration
GITHUB_TOKEN="github_token_here"
GIST_ID="gist_id_here"
GIST_FILENAME="gist_filename_here"

GIST_URL="https://gist.githubusercontent.com/{username}/{gist_id}/raw/{gist_name}"
RELEASE_URL="https://api.github.com/repos/{username}/{repo_name}/releases/latest"

# Discord configuration
# Format for nested Discord configuration:
# DISCORD__WEBHOOKS__<channel_name>__ID=webhook_id
# DISCORD__WEBHOOKS__<channel_name>__TOKEN=webhook_token
# DISCORD__ROLES__<role_name> = role_id

# Example: Main notification channel
DISCORD__WEBHOOKS__MAIN__ID=123456789
DISCORD__WEBHOOKS__MAIN__TOKEN=abcdef123456

# Example: Error logging channel
DISCORD__WEBHOOKS__ERRORS__ID=987654321
DISCORD__WEBHOOKS__ERRORS__TOKEN=xyz789abc

# Example: Roles
DISCORD__ROLES__ADMIN=444555666
DISCORD__ROLES__USER=000111222
